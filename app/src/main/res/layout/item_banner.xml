<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"

    android:background="@drawable/homebj_02"
    android:layout_height="wrap_content"
    >

    <!-- <View
         android:background="@drawable/ty"
         android:layout_width="match_parent"
         android:layout_height="200dp" />-->






    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="7dp"
            android:background="@color/transparent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/mcv_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7dp"
                app:cardBackgroundColor="#00000000"
                android:background="@drawable/topicb"
                android:scaleType="fitXY"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >






                    <com.ruifenglb.www.banner.BlurBanner
                        android:id="@+id/item_banner"

                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:background="@color/transparent"
                        android:scaleType="fitXY"
                        app:is_auto_play="true"
                        app:title_textsize="@dimen/font_normal" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:id="@+id/mcv_us2er"

                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/mcv_user"

                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"


                app:cardBackgroundColor="#00000000"
                android:background="@drawable/topicb"
                android:scaleType="fitXY"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >




                    <com.ruifenglb.www.ad.AdWebView
                        android:id="@+id/adWebView"
                        android:layout_below="@+id/item_banner"



                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>